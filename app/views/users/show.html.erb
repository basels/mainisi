<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= profile_pic_for @user, size: 150 %>
        <%= @user.name %>
      </h1>
      &lt;<%= @user.email %>&gt;
      <br /><br />
      Created at: <%= @user.created_at %>
      <br />
      Updated at: <%= @user.created_at %>

      <br /><br />
      <ul class="users"> <!-- TODO: fix -->
        <% @user.stories.each do |story| %>
          <%= render story %>
        <% end %>
      </ul>

    </section>
  </aside>
</div>
